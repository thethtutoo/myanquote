<!DOCTYPE html>
<html>
  <head>
    <title>Quotey</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="row">
      <div class="col-3">
        <div class="circle">
          <br />
          Myan
          <br />
          Q
          <br />
          uote
        </div>
      </div>

      <div class="col-4 slogan">
        Find healthy, and supporting quotes
      </div>
      <div class="col-5 links">
        <%= link_to 'Contribute', '#' %>
        <%= link_to 'About', '#' %>
      </div>
    </header>

    <hr class="clear">
    <br class="clear">
    <%= yield %>
  </body>
</html>
